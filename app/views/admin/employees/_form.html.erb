<%= bootstrap_form_for([:admin, @employee]) do |f| %>
  <% if @employee.errors.any? %>
    <div class="alert alert-danger">
      <p><%= @employee.errors.count %>件のエラーが有ります。</p>

      <ul>
      <% @employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.text_field :name %>
  <%= f.email_field :email %>
  <%= f.check_box :admin %>
  <%= f.password_field :password %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit %>

<% end %>
