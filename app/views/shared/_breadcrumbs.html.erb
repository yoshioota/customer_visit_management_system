<% if @breadcrumbs.present? %>
  <ol class='breadcrumb' style='margin-top: -15px;'>
    <% @breadcrumbs.each_with_index do |breadcrumb, idx| %>
      <li class="<%= idx == @breadcrumbs.size - 1 ? 'active' : '' %>">
        <% case breadcrumb[1] %>
        <% when nil %>
          <%= breadcrumb[0] %>
        <% else %>
          <%= link_to breadcrumb[0], breadcrumb[1] %>
        <% end %>
      </li>
    <% end %>
  </ol>
<% end %>
